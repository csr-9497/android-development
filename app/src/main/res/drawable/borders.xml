<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp"/>
            <stroke android:width="3dip" android:color="#b4b1b1" />
            <gradient android:angle="-90" android:startColor="#b4b1b1" android:endColor="#c9c5c5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="3dip" android:color="#b4b1b1" />
            <solid android:color="#b4b1b1"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp"/>
            <stroke android:width="3dip" android:color="#ece5e5" />
            <gradient android:angle="-90" android:startColor="#ece5e5" android:endColor="#ece5e5" />
        </shape>
    </item>
</selector>