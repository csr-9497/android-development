<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke  android:topRightRadius="30dp" android:bottomRightRadius="30dip" android:color="#752323" />
            <gradient android:angle="-90" android:startColor="#752323" android:endColor="#752323"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp"/>
            <stroke android:width="1dip" android:color="#752323" />
            <solid android:color="#752323"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners  android:radius="30dp"/>
            <stroke android:width="10dip" android:color="#752323" />
            <gradient android:angle="-90" android:startColor="#752323" android:endColor="#752323" />
        </shape>
    </item>
</selector>